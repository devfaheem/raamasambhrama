{{ attach_library('rotary_bootstrap/vue-library') }}
<div class="page-wrapper">
	<header class="main-header header-style-two alternate-two fixed-header">
		{{ page.header }}
	</header>
	<main role="main">
		<div id="app" class="container mt-5" style="margin-top:150px !important">
			{% verbatim %}
				<form>
					<div class="row">
						<div class="col-12">
							<h1 class="text-center">Welcome, To The Event Registration.</h1>
						</div>
						<div class="col-6">
							<div class="form-group">
								<label for="yourname">Your Name</label>
								<input type="text" v-model="formData.registrantName" class="form-control " id="yourname">
								<small id="emailHelp" class="form-text text-muted">Please Enter Your Name</small>
							</div>
							<div class="form-group">
								<label for="yourname">Password</label>
								<input type="text" v-model="formData.password" class="form-control " id="password" placeholder="Password">
								<small id="emailHelp" class="form-text text-muted">This is required</small>
							</div>
							<div class="form-group">
								<label for="registration-type">Registration Type</label>
								<select id="registration-type" v-model="formData.registrationType" class="custom-select custom-select-sm">
									<option selected value="0">Select One</option>
									<option value="9">Rotarian</option>
									<option value="10">Ann</option>
									<option value="11">Annet(Above 5 Years)</option>
									<option value="12">Couple Entry(Husband+Wife)</option>
									<option value="13">Family Entry (Husband+Wife+1 Child)</option>
									<option value="14">Special Famiy Entry(Husband+Wife+2 Child)</option>
								</select>
							</div>

							<div class="form-group">
								<label for="club">Club</label>
								<select id="clubs" v-model="formData.clubId" class="custom-select custom-select-sm">
									<option selected>Select One</option>
									<option v-for="club in clubs" :key="club.tid" :value="club.tid">{{club.name}}</option>
								</select>
							</div>

							<div class="form-group">
								<label for="yourname">Mobile</label>
								<input type="text" v-model="formData.mobile" class="form-control " id="yourname" placeholder="">
							</div>
						</div>
						<div class="col-6">

							<div class="form-group">
								<label for="yourname">Email</label>
								<input type="text" v-model="formData.email" class="form-control " id="yourname" placeholder="Password">
								<small id="emailHelp" class="form-text text-muted">This is required</small>
							</div>

							<div class="form-group">
								<label for="yourname">Confrim Password</label>
								<input type="text" v-model="formData.confirmpassword" class="form-control " id="yourname" placeholder="Password">
								<small id="emailHelp" class="form-text text-muted">This is required</small>
							</div>


							<div class="form-group">
								<label for="club">Zone</label>
								<select id="zones" v-model="formData.zoneId" @change="loadClubs($event)" class="custom-select custom-select-sm">
									<option selected>Select One</option>
									<option v-for="zone in zones" :key="zone.tid" :value="zone.tid">{{zone.name}}</option>
								</select>
							</div>

							<div class="form-group">
								<label for="club">Payment Method</label>
								<select id="club" v-model="formData.paymentMode" class="custom-select custom-select-sm">
									<option selected>Select One</option>
									<option value="cheque">Cheque</option>
									<option value="neft">Neft</option>
									<option value="gpay">Google Pay</option>
									<option value="directbanktransfer">Direct Bank Transfer</option>
								</select>
							</div>


							<div class="form-group">
								<label for="yourname">Contact Address</label>
								<input type="text" v-model="formData.contactAddress" class="form-control " id="yourname" placeholder="">
							</div>


						</div>
						<div class="col-12">
							<div class="form-group">
								<label for="yourname">Current Designation</label>
								<input type="text" v-model="formData.currentDesignation" class="form-control " id="yourname" placeholder="">
							</div>
						</div>
						<div class="col-12" v-if="dependantsCount != 0">
							<table class="table table-striped">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Full Name</th>
										<th scope="col">Mobile Number</th>
										<th scope="col">Food Preference</th>
									</tr>
								</thead>
								<tbody>
									<tr v-for="index in dependantsCount">
										<th scope="row">{{index}}</th>
										<td><input type="text" v-model="formData.dependants[index-1]['fullname']" class="form-control "></td>
										<td><input type="text" v-model="formData.dependants[index-1]['mobilenumber']" class="form-control "></td>
										<td>
											<select id="club" v-model="formData.dependants[index-1]['foodprefs']" class="custom-select custom-select-sm">
												<option selected>Select One</option>
												<option value="veg">Veg</option>
												<option value="nonveg">Non-Veg</option>
											</select>
										</td>
									</tr>
								</tbody>
							</table>


						</div>
						<div class="col-12 mt-5">
							<button @click.prevent="submitRegistration()" class="btn btn-primary btn-lg float-right w-100">Register</button>
						</div>

					</div>
				</form>
			{% endverbatim %}
		</div>
	</main>

	{% if page.footer %}
		<footer class="mt-auto {{ footer_classes }}">
			<div class="{{ b4_top_container }}">
				{{ page.footer }}
			</div>
		</footer>
	{% endif %}
</div>
