{{ attach_library('rotary_bootstrap/vue-library') }}
<div class="page-wrapper">
<header class="main-header header-style-two alternate-two fixed-header">
  {{ page.header }}
</header>
<main role="main">
<div id="app" class="container mt-5" style="margin-top:150px !important">
{% verbatim %}
<form>
<div class="row">
<div class="col-12"><h1 class="text-center">Welcome, To The Event Registration.</h1></div>
  <div class="col-6">
    <div class="form-group">
      <label for="yourname">Your Name</label>
      <input type="text" v-model="registrantName" class="form-control form-control-sm" id="yourname">
      <small id="emailHelp" class="form-text text-muted">Please Enter Your Name</small>
    </div>
    <div class="form-group">
      <label for="yourname">Password</label>
      <input type="text" v-model="password" class="form-control form-control-sm" id="password" placeholder="Password">
      <small id="emailHelp" class="form-text text-muted">This is required</small>
    </div>
    <div class="form-group">
    <label for="registration-type">Registration Type</label>
    <select id="registration-type" v-model="registrationType" class="custom-select custom-select-sm">
      <option selected>Select One</option>
      <option value="1">Rotarian</option>
      <option value="2">Ann</option>
      <option value="3">Annet(Above 5 Years)</option>
      <option value="3">Couple Entry(Husband+Wife)</option>
      <option value="3">Family Entry (Husband+Wife+1 Child)</option>
      <option value="3">Special Family Entry(Husband+Wife+2 Child)</option>
    </select>
    </div>
    <div class="form-group">
    <label for="club">Zone</label>
    <select id="club"  class="custom-select custom-select-sm">
      <option selected>Select One</option>
      <option v-for="zone in zones" :key="zone.tid" :value="zone.tid">{{zone.name}}</option>
    </select>
  </div>
  <div class="form-group">
    <label for="yourname">Mobile</label>
    <input type="text" class="form-control form-control-sm" id="yourname" placeholder="">
  </div>
  </div>
  <div class="col-6">

  <div class="form-group">
    <label for="yourname">Email</label>
    <input type="text" class="form-control form-control-sm" id="yourname" placeholder="Password">
    <small id="emailHelp" class="form-text text-muted">This is required</small>
  </div>

  <div class="form-group">
    <label for="yourname">Confrim Password</label>
    <input type="text" class="form-control form-control-sm" id="yourname" placeholder="Password">
    <small id="emailHelp" class="form-text text-muted">This is required</small>
  </div>

  <div class="form-group">
    <label for="club">Club</label>
    <select id="club"  class="custom-select custom-select-sm">
      <option selected>Select One</option>
      <option value="rotarian">Rotarian</option>
      <option value="ann">Ann</option>
      <option value="annet">Annet(Above 5 Years)</option>
      <option value="couple">Couple Entry(Husband+Wife)</option>
      <option value="family">Family Entry (Husband+Wife+1 Child)</option>
      <option value="specialfamily">Special Family Entry(Husband+Wife+2 Child)</option>
    </select>
  </div>


  <div class="form-group">
    <label for="club">Payment Method</label>
    <select id="club"  class="custom-select custom-select-sm">
      <option selected>Select One</option>
      <option value="1">Cheque</option>
      <option value="2">Neft</option>
      <option value="2">Neft</option>
      <option value="2">Direct Bank Transfer</option>
    </select>
  </div>


  <div class="form-group">
    <label for="yourname">Contact Address</label>
    <input type="text" class="form-control form-control-sm" id="yourname" placeholder="">
  </div>



  </div>
  <div class="col-12">
  <div class="form-group">
    <label for="yourname">Current Designation</label>
    <input type="text" class="form-control form-control-sm" id="yourname" placeholder="">
  </div>
  </div>
  <div class="col-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Full Name</th>
          <th scope="col">Mobile Number</th>
          <th scope="col">Food Preference</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td><input type="text" class="form-control form-control-sm"></td>
          <td><input type="text" class="form-control form-control-sm"></td>
          <td><select id="club"  class="custom-select custom-select-sm">
                <option selected>Select One</option>
                <option value="1">Cheque</option>
                <option value="2">Neft</option>
                <option value="2">Neft</option>
                <option value="2">Direct Bank Transfer</option>
              </select></td>
        </tr>
        <tr>
          <th scope="row">1</th>
          <td><input type="text" class="form-control form-control-sm"></td>
          <td><input type="text" class="form-control form-control-sm"></td>
          <td><select id="club"  class="custom-select custom-select-sm">
                <option selected>Select One</option>
                <option value="1">Cheque</option>
                <option value="2">Neft</option>
                <option value="2">Neft</option>
                <option value="2">Direct Bank Transfer</option>
              </select></td>
        </tr>
        <tr>
          <th scope="row">1</th>
          <td><input type="text" class="form-control form-control-sm"></td>
          <td><input type="text" class="form-control form-control-sm"></td>
          <td><select id="club"  class="custom-select custom-select-sm">
                <option selected>Select One</option>
                <option value="1">Cheque</option>
                <option value="2">Neft</option>
                <option value="2">Neft</option>
                <option value="2">Direct Bank Transfer</option>
              </select></td>
        </tr>
        <tr>
          <th scope="row">1</th>
          <td><input type="text" class="form-control form-control-sm"></td>
          <td><input type="text" class="form-control form-control-sm"></td>
          <td><select id="club"  class="custom-select custom-select-sm">
                <option selected>Select One</option>
                <option value="1">Cheque</option>
                <option value="2">Neft</option>
                <option value="2">Neft</option>
                <option value="2">Direct Bank Transfer</option>
              </select></td>
        </tr>

      </tbody>
    </table>


  </div>
  <div class="col-12">
  <button type="submit" class="btn btn-primary btn-lg float-right">Submit</button>
  </div>

</div>
</form>
{% endverbatim %}
</div>
</main>

{% if page.footer %}
<footer class="mt-auto {{ footer_classes }}">
  <div class="{{ b4_top_container }}">
    {{ page.footer }}
  </div>
</footer>
